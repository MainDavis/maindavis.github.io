---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import Terminal from "../components/Terminal.astro";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const allProjects = await getCollection("projects");
const rootProjects = allProjects.filter(
  (entry) => !entry.slug.includes("/") || entry.slug.endsWith("/index")
);
const projects = rootProjects.slice(0, 3).map((entry) => ({
  entry,
  slug: entry.slug.replace(/\/index$/, ""),
}));

const featuredPosts = (await getCollection("blog")).filter((post) => post.data.featured);
const featuredProjects = rootProjects
  .filter((entry) => entry.data.featured)
  .map((entry) => ({ entry, slug: entry.slug.replace(/\/index$/, "") }));
---

<BaseLayout title="~/home | Red Team Operations">
  <section class="mx-auto w-full max-w-6xl space-y-8">
    <div class="panel border-glow rounded-md px-6 py-6">
      <div class="text-xs uppercase tracking-[0.3em] text-terminal-muted/80">
        THREAT_ACTOR_DOSSIER :: [MAINDAVIS]
      </div>
      <div class="mt-4 grid gap-6 md:grid-cols-[1.6fr,1fr]">
        <div>
          <h1
            class="text-4xl uppercase tracking-[0.2em] text-terminal-green md:text-6xl lg:text-7xl glitch"
            data-text="MAINDAVIS"
          >
            MAINDAVIS
          </h1>
          <p class="mt-2 text-sm uppercase tracking-[0.22em] text-terminal-muted/80">
            Target Name: David Villaverde Avila
          </p>
          <p class="mt-4 text-base text-terminal-light/95 md:text-lg">
            Consultor de Red Team enfocado en simulaciones adversarias y desarrollo
            de tooling ofensivo para validacion de controles y operaciones encubiertas.
          </p>
          <div class="mt-4 grid gap-2 text-sm text-terminal-light/90">
            <span>Enfoque: operaciones red team, simulacion adversaria, tooling</span>
            <span class="flex items-center gap-2">
              <span class="text-terminal-green">&gt;_</span>
              Comms: maindavis.sec@gmail.com
            </span>
          </div>
        </div>
        <div class="border border-terminal-border/70 px-4 py-3 text-xs text-terminal-light/90">
          <div class="text-xs uppercase tracking-[0.3em] text-terminal-muted/80">
            Atributos de Amenaza
          </div>
          <div class="mt-3 grid gap-2 text-sm">
            <span>Affiliation: Red Team / Offensive Security</span>
            <span>Status: Active</span>
            <span>Risk_Level: Critical</span>
          </div>
        </div>
      </div>
    </div>

    <Terminal command="./access_workspace --user MainDavis">
      <p>
        Sesion autorizada. Contexto limitado al perimetro publico. Informacion
        operativa disponible bajo demanda.
      </p>
    </Terminal>

    <div class="grid gap-6 md:grid-cols-[1.1fr,1.4fr]">
      <div class="panel rounded-md px-6 py-5">
        <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-muted/70">
          Blog Feed
        </h2>
        <div class="mt-5 space-y-3 text-sm text-terminal-light/85">
          {posts.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="flex items-center justify-between border-b border-terminal-border pb-3 transition hover:border-terminal-green hover:shadow-glow-strong"
            >
              <span>blog/{post.slug}</span>
              <span class="text-terminal-muted/70">{post.data.date.toLocaleDateString("es-ES")}</span>
            </a>
          ))}
          {projects.map(({ entry, slug }) => (
            <a
              href={`/arsenal/${slug}`}
              class="flex items-center justify-between border-b border-terminal-border pb-3 transition hover:border-terminal-green hover:shadow-glow-strong"
            >
              <span>arsenal/{slug}</span>
              <span class="text-terminal-muted/70">{entry.data.status ?? "activo"}</span>
            </a>
          ))}
        </div>
      </div>

      <div class="panel rounded-md px-6 py-5">
        <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-muted/70">
          Top Operations
        </h2>
        <div class="mt-5 grid gap-3 text-sm md:grid-cols-2">
          {featuredPosts.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="border border-terminal-border px-4 py-2 text-terminal-light/85 transition hover:border-terminal-green hover:shadow-glow-strong"
            >
              blog/{post.slug}
            </a>
          ))}
          {featuredProjects.map(({ entry, slug }) => (
            <a
              href={`/arsenal/${slug}`}
              class="border border-terminal-border px-4 py-2 text-terminal-light/85 transition hover:border-terminal-green hover:shadow-glow-strong"
            >
              arsenal/{slug}
            </a>
          ))}
          {!featuredPosts.length && !featuredProjects.length && (
            <div class="border border-terminal-border px-4 py-2 text-terminal-muted/70">
              Sin destacados. Marca items con featured: true.
            </div>
          )}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

---
import { getCollection } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import Terminal from "../components/Terminal.astro";

const posts = (await getCollection("blog"))
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0, 3);

const allProjects = await getCollection("projects");
const rootProjects = allProjects.filter(
  (entry) => !entry.slug.includes("/") || entry.slug.endsWith("/index")
);
const projects = rootProjects.slice(0, 3).map((entry) => ({
  entry,
  slug: entry.slug.replace(/\/index$/, ""),
}));

const featuredPosts = (await getCollection("blog")).filter((post) => post.data.featured);
const featuredProjects = rootProjects
  .filter((entry) => entry.data.featured)
  .map((entry) => ({ entry, slug: entry.slug.replace(/\/index$/, "") }));
---

<BaseLayout title="~/home | Red Team Operations">
  <section class="mx-auto w-full max-w-6xl space-y-8">
    <Terminal command="./access_workspace --user MainDavis">
      <p>
        Sesion autorizada. Contexto limitado al perimetro publico. Informacion
        operativa disponible bajo demanda.
      </p>
    </Terminal>

    <div class="grid gap-6 md:grid-cols-[1.1fr,1.4fr]">
      <div class="panel border-glow rounded-md px-5 py-4">
        <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-cyan/70">
          Bio
        </h2>
        <p class="mt-4 text-sm text-terminal-green/80">
          MainDavis: Consultor de Red Team y desarrollador de herramientas ofensivas.
        </p>
        <div class="mt-4 grid gap-2 text-xs text-terminal-cyan/70">
          <span>Enfoque: operaciones red team, simulacion adversaria, tooling</span>
          <span>Contacto: canal cifrado bajo solicitud</span>
        </div>
      </div>

      <div class="panel border-glow rounded-md px-5 py-4">
        <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-cyan/70">
          Blog Feed
        </h2>
        <div class="mt-4 space-y-3 text-sm text-terminal-green/80">
          {posts.map((post) => (
            <a
              href={`/blog/${post.slug}`}
              class="flex items-center justify-between border-b border-terminal-border pb-2 transition hover:border-terminal-green/60"
            >
              <span>blog/{post.slug}</span>
              <span class="text-terminal-cyan/60">{post.data.date.toLocaleDateString("es-ES")}</span>
            </a>
          ))}
          {projects.map(({ entry, slug }) => (
            <a
              href={`/arsenal/${slug}`}
              class="flex items-center justify-between border-b border-terminal-border pb-2 transition hover:border-terminal-green/60"
            >
              <span>arsenal/{slug}</span>
              <span class="text-terminal-cyan/60">{entry.data.status ?? "activo"}</span>
            </a>
          ))}
        </div>
      </div>
    </div>

    <div class="panel border-glow rounded-md px-5 py-4">
      <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-cyan/70">
        Top Operations
      </h2>
      <div class="mt-4 grid gap-3 text-sm md:grid-cols-2">
        {featuredPosts.map((post) => (
          <a
            href={`/blog/${post.slug}`}
            class="border border-terminal-border px-3 py-2 text-terminal-green/80 transition hover:border-terminal-green/70"
          >
            blog/{post.slug}
          </a>
        ))}
        {featuredProjects.map(({ entry, slug }) => (
          <a
            href={`/arsenal/${slug}`}
            class="border border-terminal-border px-3 py-2 text-terminal-green/80 transition hover:border-terminal-green/70"
          >
            arsenal/{slug}
          </a>
        ))}
        {!featuredPosts.length && !featuredProjects.length && (
          <div class="border border-terminal-border px-3 py-2 text-terminal-green/60">
            Sin destacados. Marca items con featured: true.
          </div>
        )}
      </div>
    </div>
  </section>
</BaseLayout>

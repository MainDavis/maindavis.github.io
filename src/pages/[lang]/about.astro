      liveOpsMain: "Listening for operator input. Beacon window stable.",
      liveOpsSub: "Use secure channel for coordination. Noisy ops are sandboxed.",
      connect: [
        {
          label: "Email",
          value: "maindavis.sec@gmail.com",

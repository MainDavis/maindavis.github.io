---

<BaseLayout title="~/about | Red Team Profile">
  <section class="mx-auto w-full max-w-5xl space-y-6">
    <div class="grid gap-6 lg:grid-cols-[1.15fr_0.85fr]">
      <div class="space-y-6">
        <div class="panel border-glow rounded-md overflow-hidden">
          <div class="flex items-center justify-between border-b border-terminal-border/70 bg-black/60 px-4 py-2">
            <span class="text-xs uppercase tracking-[0.25em] text-terminal-green text-glow-strong">
              /home/maindavis/system
            </span>
          </div>
          <div class="px-5 py-4 text-terminal-light/90">
            <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-green/80">
              {content.headings.system}
            </h2>
            <div class="mt-3 space-y-2 text-sm">
              {content.systemLines.map((line) => (
                <p>{line}</p>
              ))}
            </div>
          </div>
          <div class="border-t border-terminal-border/70 bg-black/60 px-4 py-2 text-xs text-terminal-green text-glow-strong">
            [MainDavis@system] ~$ whoami
          </div>
        </div>

        <div class="panel border-glow rounded-md overflow-hidden">
          <div class="flex items-center justify-between border-b border-terminal-border/70 bg-black/60 px-4 py-2">
            <span class="text-xs uppercase tracking-[0.25em] text-terminal-green text-glow-strong">
              /home/maindavis/profile
            </span>
          </div>
          <div class="px-5 py-5 text-terminal-light/90">
            <div class="grid gap-5 md:grid-cols-[200px_1fr] md:items-center">
              <div class="border-glow rounded-md bg-black/40 p-2">
                <img
                  src="/images/profile.jpg"
                  alt="Retrato de MainDavis"
                  class="h-52 w-full rounded-md object-cover grayscale-[0.2]"
                  loading="lazy"
                />
              </div>

              <div>
                <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-green/80">
                  {content.profileTitle}
                </h2>
                <p class="mt-3 text-sm">{content.profileBody}</p>
              </div>
            </div>
          </div>
          <div class="border-t border-terminal-border/70 bg-black/60 px-4 py-2 text-xs text-terminal-green text-glow-strong">
            [MainDavis@system] ~$ cat dossier.md
          </div>
        </div>

        <div class="panel border-glow rounded-md overflow-hidden">
          <div class="flex items-center justify-between border-b border-terminal-border/70 bg-black/60 px-4 py-2">
            <span class="text-xs uppercase tracking-[0.25em] text-terminal-green text-glow-strong">
              /home/maindavis/achievements
            </span>
          </div>
          <div class="px-5 py-4 text-terminal-light/90">
            <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-green/80">
              {content.headings.achievements}
            </h2>
            <ul class="mt-3 space-y-2 text-sm">
              {content.achievements.map((item) => (
                <li class="flex items-start gap-2">
                  <span class="text-terminal-green/70">›</span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          </div>
          <div class="border-t border-terminal-border/70 bg-black/60 px-4 py-2 text-xs text-terminal-green text-glow-strong">
            [MainDavis@system] ~$ ls --opsec --sort=impact
          </div>
        </div>

        <div class="panel border-glow rounded-md overflow-hidden">
          <div class="flex items-center justify-between border-b border-terminal-border/70 bg-black/60 px-4 py-2">
            <span class="text-xs uppercase tracking-[0.25em] text-terminal-green text-glow-strong">
              /home/maindavis/terminal
            </span>
          </div>
          <div class="px-5 py-4 text-terminal-light/90">
            <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-green/80">
              {content.headings.liveOps}
            </h2>
            <p class="mt-3 text-sm">{content.liveOpsMain}</p>
            <p class="mt-2 text-sm text-terminal-light/70">
              {content.liveOpsSub}
            </p>
          </div>
          <div class="border-t border-terminal-border/70 bg-black/60 px-4 py-2 text-xs text-terminal-green text-glow-strong">
            [MainDavis@system] ~$ tail -f opsec.log
          </div>
        </div>
      </div>

      <div class="space-y-6">
        <div class="panel border-glow rounded-md overflow-hidden">
          <div class="flex items-center justify-between border-b border-terminal-border/70 bg-black/60 px-4 py-2">
            <span class="text-xs uppercase tracking-[0.25em] text-terminal-green text-glow-strong">
              /home/maindavis/skills
            </span>
          </div>
          <div class="px-5 py-4 text-terminal-light/90">
            <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-green/80">
              {content.headings.skills}
            </h2>
            <ul class="mt-3 space-y-2 text-sm">
              {content.skills.map((skill) => (
                <li class="flex items-start gap-2">
                  <span class="text-terminal-green/70">+</span>
                  <span>{skill}</span>
                </li>
              ))}
            </ul>
            <p class="mt-3 text-xs text-terminal-green/70">{content.skillsNote}</p>
          </div>
          <div class="border-t border-terminal-border/70 bg-black/60 px-4 py-2 text-xs text-terminal-green text-glow-strong">
            [MainDavis@system] ~$ cat skills.list
          </div>
        </div>

        <div class="panel border-glow rounded-md overflow-hidden">
          <div class="flex items-center justify-between border-b border-terminal-border/70 bg-black/60 px-4 py-2">
            <span class="text-xs uppercase tracking-[0.25em] text-terminal-green text-glow-strong">
              /home/maindavis/certs
            </span>
          </div>
          <div class="px-5 py-4 text-terminal-light/90">
            <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-green/80">
              {content.headings.certs}
            </h2>
            <ul class="mt-3 space-y-3 text-sm">
              {certifications.map((certification) => (
                <li class="rounded-md border border-terminal-cyan/30 bg-black/40 p-3">
                  <p class="text-terminal-light">{certification.name}</p>
                  <p class="text-terminal-light/70">{certification.issuer}</p>
                  <a
                    class="mt-2 inline-flex text-xs uppercase tracking-[0.25em] text-terminal-green hover:text-terminal-green/70"
                    href={certification.verifyUrl}
                    target="_blank"
                    rel="noreferrer"
                  >
                    {content.verifyLabel}
                  </a>
                </li>
              ))}
            </ul>
          </div>
          <div class="border-t border-terminal-border/70 bg-black/60 px-4 py-2 text-xs text-terminal-green text-glow-strong">
            [MainDavis@system] ~$ cat certs.index
          </div>
        </div>

        <div class="panel border-glow rounded-md overflow-hidden">
          <div class="flex items-center justify-between border-b border-terminal-border/70 bg-black/60 px-4 py-2">
            <span class="text-xs uppercase tracking-[0.25em] text-terminal-green text-glow-strong">
              /home/maindavis/connect
            </span>
          </div>
          <div class="px-5 py-4 text-terminal-light/90">
            <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-green/80">
              {content.headings.connect}
            </h2>
            <ul class="mt-3 space-y-3 text-sm">
              {content.connect.map((item) => (
                <li class="flex items-start justify-between gap-4 border-b border-terminal-border/60 pb-2 last:border-b-0 last:pb-0">
                  <span class="text-terminal-light">{item.label}</span>
                  {item.href ? (
                    <a
                      class="text-terminal-green hover:text-terminal-green/70"
                      href={item.href}
                      target="_blank"
                      rel="noreferrer"
                    >
                      {item.value}
                    </a>
                  ) : (
                    <span class="text-terminal-green/70">{item.value}</span>
                  )}
                </li>
              ))}
            </ul>
          </div>
          <div class="border-t border-terminal-border/70 bg-black/60 px-4 py-2 text-xs text-terminal-green text-glow-strong">
            [MainDavis@system] ~$ netstat --quiet
          </div>
        </div>
      </div>
    </div>

    <div class="panel border-glow rounded-md overflow-hidden">
      <div class="flex items-center justify-between border-b border-terminal-border/70 bg-black/60 px-4 py-2">
        <span class="text-xs uppercase tracking-[0.25em] text-terminal-green text-glow-strong">
          /home/maindavis/badges
        </span>
      </div>
      <div class="px-5 py-4 text-terminal-light/90">
        <h2 class="text-sm uppercase tracking-[0.3em] text-terminal-green/80">
          {content.headings.badges}
        </h2>
        <div class="mt-3 flex flex-wrap gap-2">
          {content.badges.map((badge) => (
            <span class="rounded-full border border-terminal-cyan/40 bg-black/50 px-3 py-1 text-xs text-terminal-green">
              {badge}
            </span>
          ))}
        </div>
      </div>
      <div class="border-t border-terminal-border/70 bg-black/60 px-4 py-2 text-xs text-terminal-green text-glow-strong">
        [MainDavis@system] ~$ echo $badges
      </div>
    </div>
  </section>
</BaseLayout>

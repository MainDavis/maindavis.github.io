---
import { getCollection } from "astro:content";
import BlogLayout from "../../layouts/BlogLayout.astro";

const entries = await getCollection("projects");

const projects = entries
  .filter((entry) => !entry.slug.includes("/") || entry.slug.endsWith("/index"))
  .map((entry) => ({ entry, slug: entry.slug.replace(/\/index$/, "") }));
---

<BlogLayout title="~/arsenal" description="Herramientas ofensivas y utilidades operativas.">
  <div class="grid gap-4">
    {projects.map(({ entry, slug }) => (
      <a
        href={`/arsenal/${slug}`}
        class="panel border-glow rounded-md px-5 py-4 transition hover:border-terminal-green/60"
      >
        <div class="flex items-center justify-between text-xs text-terminal-cyan/70">
          <span>{entry.data.status ?? "en desarrollo"}</span>
          <span>{entry.data.tags.join(" / ") || "sin etiquetas"}</span>
        </div>
        <h2 class="mt-2 text-lg text-terminal-green text-glow">{entry.data.title}</h2>
        <p class="mt-2 text-sm text-terminal-green/70">{entry.data.description}</p>
      </a>
    ))}
  </div>
</BlogLayout>
